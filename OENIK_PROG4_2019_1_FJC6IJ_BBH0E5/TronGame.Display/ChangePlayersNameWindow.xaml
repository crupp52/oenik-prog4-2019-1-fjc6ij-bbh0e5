<Window x:Class="TronGame.Display.ChangePlayersNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TronGame.Display"
        mc:Ignorable="d"
        Title="ChangePlayersNameWindow" Height="180" Width="350" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label Content="Player 1 name:" HorizontalContentAlignment="Center"/>
        <TextBox Width="200"  x:Name="player1name"/>
        <Label Content="Player 2 name:" HorizontalContentAlignment="Center" />
        <TextBox Width="200" x:Name="player2name"/>
        <Button Content="Save" Width="50" Margin="20" Click="Button_Click"/>
    </StackPanel>
</Window>
